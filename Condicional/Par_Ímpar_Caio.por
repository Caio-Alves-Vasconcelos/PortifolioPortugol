programa {
  /** Exercício 1: informar se o número é par ou ímpar */
  funcao inicio() {
    inteiro numero 
    escreva("Digite um número inteiro: ")
    leia(numero)

    se(numero % 2 == 1){
      escreva("Número Ímpar!")
    }
    senao se(numero % 2 == -1){
      escreva("Número Ímpar")
    }
    senao{
      escreva("Número par!")
    }
    

    
  }
}
